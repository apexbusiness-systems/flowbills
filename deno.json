{
  "importMap": "./supabase/import_map.json",
  "compilerOptions": {
    "lib": ["deno.ns", "dom"],
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "preserve"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "include": ["ban-untagged-todo", "no-throw-literal"],
      "exclude": ["no-explicit-any"]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    "build",
    ".git",
    "supabase/migrations"
  ]
}
