  "chunking_policy": {
    "chunk_size_tokens": 1500,
    "overlap_tokens": 150,
    "metadata_fields": ["standard", "section", "version", "entity", "country", "classification"],
    "citation_required": true
  },
  "retrieval_policy": {
    "min_citations": 1,
    "confidence_threshold": 0.7,
    "max_chunks_per_query": 5,
    "fallback_action": "request_document_upload"
